{
  "name": "@ethereum-attestation-service/contracts",
  "version": "0.8.0",
  "description": "Ethereum Attestation Service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum-attestation-service/contracts"
  },
  "author": "Leonid Beder",
  "license": "MIT",
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/**/*.json",
    "/typechain/**/*.ts",
    "!/contracts/tests"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "recompile": "yarn clean && yarn compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "clean": "rm -rf artifacts cache data coverage typechain",
    "dev": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "lint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "format": "prettier --check --write contracts/**/*.sol *.ts test/**/*.ts --config .prettierrc",
    "profile": "PROFILE=1 yarn test",
    "size": "hardhat size-contracts",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten",
    "docgen": "hardhat docgen"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^10.0.0",
    "hardhat": "2.6.7"
  },
  "devDependencies": {
    "@ethereum-attestation-service/sdk": "^0.11.2",
    "@ethersproject/hardware-wallets": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@trivago/prettier-plugin-sort-imports": "^3.0.0",
    "@typechain/ethers-v5": "^8.0.0",
    "@typechain/hardhat": "^3.0.0",
    "@types/async-retry": "^1.4.3",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "chai-arrays": "^2.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.3",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.5.1",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-docgen": "^1.1.2",
    "hardhat-gas-reporter": "^1.0.4",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solc": "0.8.9",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.0",
    "typescript": "^4.4.4"
  }
}
