{
  "name": "@ethereum-attestation-service/contracts",
  "version": "0.3.0",
  "description": "Ethereum Attestation Service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum-attestation-service/eas-contracts"
  },
  "author": "Leonid Beder",
  "license": "MIT",
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/**/*.json",
    "/typechain/**/*.ts",
    "!/contracts/tests"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "recompile": "yarn clean && yarn compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "clean": "rm -rf artifacts cache data coverage typechain",
    "dev": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "lint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "format": "prettier --check --write contracts/**/*.sol test/**/*.js --config .prettierrc",
    "profile": "PROFILE=1 yarn test",
    "size": "hardhat size-contracts",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten",
    "docgen": "hardhat docgen"
  },
  "dependencies": {
    "hardhat": "2.5.0"
  },
  "devDependencies": {
    "@ethereum-attestation-service/eas-sdk": "ethereum-attestation-service/eas-sdk.git",
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.4.0",
    "chai": "^4.3.4",
    "chai-arrays": "^2.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.0",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.4.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-docgen": "^1.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "mocha": "^9.0.2",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "sol2uml": "^1.1.25",
    "solc": "0.7.6",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  }
}
