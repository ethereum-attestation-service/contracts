{
  "name": "@ethereum-attestation-service/contracts",
  "version": "0.8.0",
  "description": "Ethereum Attestation Service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum-attestation-service/contracts"
  },
  "author": "Leonid Beder",
  "license": "MIT",
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/**/*.json",
    "/typechain-types/**/*.ts",
    "!/contracts/tests"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "recompile": "yarn clean && yarn compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "clean": "rm -rf artifacts cache data coverage typechain-types",
    "dev": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "lint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "format": "prettier --check --write contracts/**/*.sol *.ts test/**/*.ts --config .prettierrc",
    "profile": "PROFILE=1 yarn test",
    "size": "hardhat size-contracts",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten",
    "docgen": "hardhat docgen"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.0.0",
    "hardhat": "2.9.2"
  },
  "devDependencies": {
    "@ethereum-attestation-service/sdk": "^0.11.2",
    "@ethersproject/hardware-wallets": "^5.6.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "4.5.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/async-retry": "^1.4.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "chai-arrays": "^2.2.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.1.4",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.6.2",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^9.2.2",
    "prettier": "^2.6.1",
    "prettier-package-json": "^2.6.3",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "0.8.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  }
}
