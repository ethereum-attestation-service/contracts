{
  "name": "@ethereum-attestation-service/contracts",
  "version": "0.2.0",
  "description": "Ethereum Attestation Service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum-attestation-service/eas-contracts"
  },
  "author": "Leonid Beder",
  "license": "MIT",
  "main": "truffle-config.js",
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/**/*.json",
    "/typechain/**/*.ts",
    "!/contracts/tests"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "testb": "BAIL=1 yarn test",
    "profile": "PROFILE=1 yarn test",
    "size": "hardhat size-contracts",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "flatten": "hardhat flatten",
    "lint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "format": "prettier --check --write contracts/**/*.sol test/**/*.js --config .prettierrc",
    "clean": "rm -rf artifacts cache data coverage typechain"
  },
  "dependencies": {
    "hardhat": "2.4.0"
  },
  "devDependencies": {
    "@ethereum-attestation-service/eas-sdk": "ethereum-attestation-service/eas-sdk.git",
    "@ethersproject/hardware-wallets": "^5.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@openzeppelin/contracts-upgradeable": "3.4.1-solc-0.7-2",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "chai": "^4.3.4",
    "chai-arrays": "^2.2.0",
    "decimal.js": "10.2.1",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.0.10",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.3.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-dependency-compiler": "^1.1.1",
    "hardhat-deploy": "^0.8.9",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "mocha": "^9.0.1",
    "prettier": "^2.3.1",
    "prettier-package-json": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "snyk": "^1.630.0",
    "solc": "0.7.6",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.4",
    "web3": "1.3.6"
  }
}
